                        <padding>
                           <Insets left="5.0" right="5.0" />
                        </padding>
                        <effect>
                           <InnerShadow />
                        </effect>
                     </Label>
                     <Label fx:id="labelDuration" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Durée (Largeur x Hauteur)" textAlignment="CENTER" wrapText="true">
                        <padding>
                           <Insets left="5.0" right="5.0" />
                        </padding>
                        <effect>
                           <InnerShadow />
                        </effect>
                     </Label>
                     <Label fx:id="labelSize" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Taille en Ko" textAlignment="CENTER" textFill="BLUE" wrapText="true">
                        <padding>
                           <Insets left="5.0" right="5.0" />
                        </padding>
                        <font>
                           <Font name="System Italic" size="12.0" />
                        </font>
                     </Label>
                     <BorderPane>
                        <center>
                           <Label fx:id="labelNotation" maxWidth="1.7976931348623157E308" text="Notation" textAlignment="CENTER" wrapText="true">
                              <padding>
                                 <Insets left="5.0" />
                              </padding>
                           </Label>
                        </center>
                        <right>
                           <Button fx:id="editionNotation" mnemonicParsing="false" onAction="#editNotation" text="Modifier" BorderPane.alignment="CENTER">
                              <BorderPane.margin>
                                 <Insets right="5.0" />
                              </BorderPane.margin>
                           </Button>
                        </right>
                     </BorderPane>
                     <VBox alignment="TOP_CENTER">
                        <children>
                           <TitledPane fx:id="labelPersonsPane" text="Personnes">
                              <content>
                                 <VBox alignment="TOP_CENTER" spacing="10.0">
                                    <children>
                                       <Button fx:id="editionPersons" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#editPersons" text="Modifier" textAlignment="RIGHT" />
                                       <Label fx:id="labelPersons" alignment="CENTER" text="Label" textAlignment="CENTER" wrapText="true">
                                          <font>
                                             <Font name="System Bold Italic" size="12.0" />
                                          </font>
                                       </Label>
                                    </children>
                                 </VBox>
                              </content>
                           </TitledPane>
                           <TitledPane fx:id="labelCategoriesPane" text="Catégories">
                              <content>
                                 <VBox alignment="TOP_CENTER" spacing="10.0">
                                    <children>
                                       <Button fx:id="editionCategories" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#editCategories" text="Modifier" textAlignment="RIGHT" />
                                       <Label fx:id="labelCategories" alignment="CENTER" text="Label" textAlignment="CENTER" wrapText="true">
                                          <font>
                                             <Font name="System Bold Italic" size="12.0" />
                                          </font>
                                       </Label>
                                    </children>
                                 </VBox>
                              </content>
                           </TitledPane>
                           <TitledPane fx:id="labelCountriesPane" text="Lieux">
                              <content>
                                 <VBox alignment="TOP_CENTER" spacing="10.0">
                                    <children>
                                       <Button fx:id="editionCountries" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#editCountries" text="Modifier" textAlignment="RIGHT" />
                                       <Label fx:id="labelCountries" alignment="CENTER" text="Label" textAlignment="CENTER" wrapText="true">
                                          <font>
                                             <Font name="System Bold Italic" size="12.0" />
                                          </font>
                                       </Label>
                                    </children>
                                 </VBox>
                              </content>
                           </TitledPane>
                        </children>
                     </VBox>
                  </children>
               </VBox>
            </ScrollPane>
            <GridPane fx:id="thumbnailPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="100.0" style="-fx-background-color: rgb(240,240,255);">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints vgrow="SOMETIMES" />
               </rowConstraints>
               <!--suppress JavaFxDefaultTag -->
               <ImageView fx:id="imageView" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            </GridPane>
         </SplitPane>
      </SplitPane>
   </center>
</BorderPane>
