<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="videoman.control.PersonEditionController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
    </rowConstraints>
    <!--suppress JavaFxDefaultTag -->
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label fx:id="title" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Modifier les personnes"
           textAlignment="CENTER" GridPane.columnSpan="2">
        <font>
          <Font name="System Bold" size="25.0"/>
        </font>
    </Label>
    <Label fx:id="videoLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" text="VidÃ©os" textAlignment="CENTER"
           underline="true" GridPane.columnSpan="2" GridPane.rowIndex="1"/>
    <ScrollPane fitToHeight="true" fitToWidth="true" GridPane.columnSpan="2" GridPane.rowIndex="2">
        <!--suppress JavaFxDefaultTag -->
        <ListView fx:id="videoList"/>
    </ScrollPane>
    <Label fx:id="label" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Personnes" textAlignment="CENTER"
           underline="true" GridPane.columnSpan="2" GridPane.rowIndex="3"/>
    <ScrollPane fitToWidth="true" GridPane.columnSpan="2" GridPane.rowIndex="4">
        <!--suppress JavaFxDefaultTag -->
        <VBox fx:id="list"/>
    </ScrollPane>
    <TextField fx:id="newElement" GridPane.rowIndex="5"/>
    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addElement" text="ajouter"
            GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#cancel" text="annuler"
            GridPane.rowIndex="6">
        <GridPane.margin>
          <Insets top="20.0"/>
        </GridPane.margin>
    </Button>
    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#save" text="enregistrer"
            GridPane.columnIndex="1" GridPane.rowIndex="6">
        <GridPane.margin>
          <Insets top="20.0"/>
        </GridPane.margin>
    </Button>
</GridPane>
